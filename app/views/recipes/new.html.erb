<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :ingredient_0_name %>
    <%= i.text_field :ingredient_0_name %><br>
    <%= i.label :ingredient_0_quantity %>
    <%= i.text_field :ingredient_0_quantity %><br>
 
    <%= i.label :ingredient_1_name %>
    <%= i.text_field :ingredient_1_name %><br>
    <%= i.label :ingredient_1_quantity %>
    <%= i.text_field :ingredient_1_quantity %><br>
  <% end %>
  <%= f.submit %>
<% end %>
