<%= form_for @recipe do |f| %>
  <%= f.label "Recipe title:" %>
  <%= f.text_field :title %><br/>

  <%= f.fields_for :ingredients do |inner_form| %>
    <%= inner_form.label :recipe_ingredients_attritbutes_0_name %>
    <%= inner_form.text_field :recipe_ingredients_attritbutes_0_name %><br/>

    <%= inner_form.label :recipe_ingredients_attritbutes_0_quantity %>
    <%= inner_form.text_field :recipe_ingredients_attritbutes_0_quantity %><br/>

    <%= inner_form.label :recipe_ingredients_attritbutes_1_name %>
    <%= inner_form.text_field :recipe_ingredients_attritbutes_1_name %><br/>

    <%= inner_form.label :recipe_ingredients_attritbutes_1_quantity %>
    <%= inner_form.text_field :recipe_ingredients_attritbutes_1_quantity %><br/>
  <% end %>

  <%= f.submit %>
<% end %>
