<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
   
    <%= f.fields_for :ingredients do |i_form| %>
      <%= i_form.label :name %>
      <%= i_form.text_field :name %><br>
   
      <%= i_form.label :quantity %>
      <%= i_form.text_field :quantity %><br>
   
    <% end %>
   
    <%= f.submit %>
  <% end %>