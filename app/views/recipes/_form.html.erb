<%= form_for @recipe do |f| %>
  <%= f.label "Recipe Title", :title %><br>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label "Ingredient Name", :name %><br>
    <%= ing.text_field :name %><br>
    <%= ing.label "Ingredient Quantity", :quantity %><br>
    <%= ing.text_field :quantity %><br>
  <% end %>

  <%= f.submit "Submit" %>
<% end %>