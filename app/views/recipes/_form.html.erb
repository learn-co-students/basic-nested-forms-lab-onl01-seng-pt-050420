<%= form_for @recipe do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ingredient| %>
    <%= ingredient.label :recipe_ingredients_attributes_0_name %><br>
    <%= ingredient.text_field :recipe_ingredients_attributes_0_name %><br>
    <%= ingredient.label :recipe_ingredients_attributes_1_name %><br>
    <%= ingredient.text_field :recipe_ingredients_attributes_1_name %><br>
  <% end %>

  <%= f.submit "Submit" %>
<% end %>